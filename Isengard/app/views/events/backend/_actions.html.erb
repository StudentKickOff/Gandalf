<%= link_to raw('<span class="glyphicon glyphicon-log-in"></span> Register'), new_event_registration_path(event), class: "btn btn-default btn-xs" %>
<% if can? :manage, event %>
  <%= link_to raw('<span class="glyphicon glyphicon-edit"></span> Edit'), edit_event_path(event), class: "btn btn-default btn-xs" %>
  <%= link_to raw('<span class="glyphicon glyphicon-trash"></span> Delete'), event_path(event), class: "btn btn-danger btn-xs", confirm: 'Are you sure?', method: :delete %>
<% end %>
