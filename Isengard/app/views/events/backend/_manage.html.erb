<div class="row">
  <div class="col-lg-6">
    <h2>Manage Event Zones</h2>
    <div class="row">
      <div class="col-lg-9">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <th>Name</th>
              <th>Actions</th>
            </thead>
            <%= render @event.zones %>
          </table>
        </div>
      </div>
    </div>
    <%= render "zones/form" %>
  </div>

  <div class="col-lg-6">
    <h2>Manage Access Levels</h2>
    <div class="row">
      <div class="col-lg-9">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <th>Name</th>
              <th>Zones</th>
              <th>Actions</th>
            </thead>
            <%= render @event.access_levels %>
          </table>
        </div>
      </div>
    </div>
    <%= render "access_levels/form" %>
  </div>

  <div class="col-lg-6">
    <h2>Manage Access Periods</h2>
    <div class="row">
      <div class="col-lg-5">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <th>Name</th>
              <th>Starts</th>
              <th>Ends</th>
            </thead>
            <%= render @event.periods %>
          </table>
        </div>
      </div>
    </div>
    <%= render "periods/form" %>
  </div>
</div>
