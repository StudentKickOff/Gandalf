<tr class="access-level<% if advanced %>-advanced<% end %>-<%= access_level.id %>">
  <td><%= access_level.name %></td>
  <td><%= access_level.capacity.presence || "/" %></td>
  <td>&euro;<%= access_level.price|| "0.00"  %></td>
  <td><%= if access_level.public then "public" else "private" end %></td>
  <% if advanced %>
    <td><%= render partial: 'access_levels/zones', locals: {access_level: access_level} %></td>
  <% end %>
  <td><%= link_to raw('<i class="glyphicon glyphicon-trash"></i>'), event_access_level_path(access_level.event, access_level), confirm: 'Are you sure?', remote: true, method: :delete %></td>
</tr>
