<%= form_errors @event %>
<%= form_for [@event, @event.access_levels.build], remote: true do |f| %>
  <%= form_text_field f, :name %>
  <%= form_number_field f, :capacity %>
  <%= form_text_field f, :price %>
  <%= form_check_box f, :public %>
  <%= f.button :submit, class: 'btn btn-group btn-primary' %>
<% end %>
