<div id="basic-registration-form">
  <%= form_errors @registration %>
  <%= form_for [@event, @registration], url: basic_event_registrations_path(@event), remote: true  do |f| %>
    <%= form_text_field f, :name %>
    <%= form_email_field f, :email %>
    <%= form_text_field f, :student_nr %>

    <%= form_collection_select f, :accesses, @event.access_levels, :id, :name %>
    <%= f.button :submit, class: 'btn btn-group btn-primary' %>
  <% end %>
</div>
