<%= render partial: "events/tabs" %>

<div class="row">
  <div class="col-sm-4">
    <h3>Upload Transfer CSV</h3>
    <%= form_tag({ action: :upload }, multipart: true) do %>
      <div class="form-group">
        <label>CSV file:</label>
        <%= file_field_tag :csv_file %>
      </div>
      <div class="form-group">
        <label>Column separator:</label>
        <%= text_field_tag :separator, ';', class: 'form-control' %>
      </div>
      <div class="form-group">
        <label>Amount column header:</label>
        <%= text_field_tag :amount_column, 'Bedrag', class: 'form-control' %>
      </div>
      <%= button_tag :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
    <h3>Registrations</h3>
    <div id="export-link">
      <%= render 'events/export' %>
    </div>
    <button class="btn btn-primary btn-lg" data-toggle="modal" data-target="#mail-modal">
      Send Email
    </button>
    <%= tag :div, id: "export_status_url", data: {url: export_status_event_path(@event)} %>
    <%= bootstrap_pagination @registrations %>
    <div class="table-responsive">
      <table class="table table-striped" id="table-registrations">
        <thead>
          <th>Name</th>
          <th>E-mail</th>
          <th>Access level</th>
          <th>Comment</th>
          <th>Payment code</th>
          <th width="250">To pay</th>
          <th>Actions</th>
        </thead>
        <%= render @registrations %>
      </table>
    </div>
    <%= bootstrap_pagination @registrations %>
  </div>
</div>


<div class="modal fade" id="mail-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <h2>Compose Email</h2>
        <%= form_for @event, method: :post, url: {action: :email} do %>
          <div class="form-group">
            <label class="control-label">To:</label>
            <%= select_tag "to", options_for_select([["All", -1]] + @event.access_levels.map{|a| [a.name, a.id]}), {class: 'form-control'} %>
          </div>
          <div class="form-group">
             <input type="text" class="form-control" name="email[subject]" id="emailSubject" placeholder="Subject">
          </div>
          <div class="form-group">
            <textarea rows="5" class="form-control" name="email[body]" id="emailBody" placeholder="Body"></textarea>
          </div>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Send Mail</button>
        <% end %>
      </div>
    </div>
  </div>
</div>

