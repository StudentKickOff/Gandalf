<%= form_for [@event, @event.registrations.build], remote: true do |f| %>
  <%= form_text_field f, :name %>
  <%= form_email_field f, :email %>


  <div class="row">
    <div class="col-lg-3">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th></th>
              <% @event.periods.each do |p| %>
                <th><%= p.name %></th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% @event.access_levels.each do |al| %>
              <tr>
                <th><%= al.name %></th>
                <% @event.periods.each do |p| %>
                  <td><input type="checkbox" name="registration[checkboxes][<%= al.id %>][<%= p.id %>]" /></td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <%= f.button :submit, class: 'btn btn-group btn-primary' %>
<% end %>
