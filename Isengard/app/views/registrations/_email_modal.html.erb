<div class="modal fade" id="mail-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <h2>Compose Email</h2>
        <%= form_for @event, method: :post, url: {action: :email} do %>
          <div class="form-group">
            <label class="control-label">To:</label>
            <%= select_tag "to", options_for_select([["All", -1]] + @event.access_levels.map{|a| [a.name, a.id]}), {class: 'form-control'} %>
          </div>
          <div class="form-group">
             <input type="text" class="form-control" name="email[subject]" id="emailSubject" placeholder="Subject">
          </div>
          <div class="form-group">
            <textarea rows="5" class="form-control ckeditor" name="email[body]" id="emailBody" placeholder="Body"></textarea>
          </div>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Send Mail</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
