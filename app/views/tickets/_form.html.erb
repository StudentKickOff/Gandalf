<%= simple_form_for(@ticket) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :email %>
    <%= f.input :gsm %>
    <%= f.input :checked_in_at %>
    <%= f.association :event %>
    <%= f.association :order %>
    <%= f.input :student_number %>
    <%= f.input :comment %>
    <%= f.input :barcode %>
    <%= f.input :barcode_data %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
