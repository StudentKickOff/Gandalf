<%= render partial: "events/tabs" %>

<div class="row">
  <div class="col-sm-6">
    <h3>Enter payment information</h3>

    <%= form_errors @order %>
    <%= render partial: 'flash' %>

    <%= form_for [@event, @order], url: wizard_path do |f| %>
      <%= form_text_field f, :name %>
      <%= form_email_field f, :email %>
      <%= form_email_field f, :email_confirmation %>
      <%= form_text_field f, :gsm %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <%= link_to raw('<span class="glyphicon glyphicon-chevron-left"></span> Back to tickets'), previous_wizard_path, class: 'btn btn-default'  %>
  </div>
</div>
