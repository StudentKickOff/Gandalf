<%= render partial: "events/tabs" %>

<div class="row">
  <div class="col-sm-10">
    <h3>Enter ticket information</h3>

    <%= render partial: 'flash' %>

    <%= form_for [@event, @order], url: wizard_path do |f| %>
      <%= fields_for :tickets do |tickets| %>
        <table class="table table-condensed">
          <thead>
            <th>Ticket</th>
            <th>Name</th>
            <th>Email</th>
          </thead>
          <tbody>
            <%= render partial: 'ticket', collection: @order.tickets, locals: {tickets: tickets} %>
          </tbody>
        </table>
      <% end %>
      <%= f.submit %>
    <% end %>

  </div>
</div>

<div class="row">
  <div class="col-sm-6">
    <%= link_to raw('<span class="glyphicon glyphicon-chevron-left"></span> Back to tickets'), previous_wizard_path, class: 'btn btn-default'  %>
  </div>
</div>
