<h1>Listing orders</h1>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Name</th>
      <th>Email</th>
      <th>Gsm</th>
      <th>Ticket</th>
      <th>Event</th>
      <th>Paid</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.status %></td>
        <td><%= order.name %></td>
        <td><%= order.email %></td>
        <td><%= order.gsm %></td>
        <td><%= order.ticket_id %></td>
        <td><%= order.event %></td>
        <td><%= order.paid %></td>
        <td><%= order.price %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

