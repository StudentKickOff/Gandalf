<%= form_for [event, partner, partner.received_invitations.build], remote: true do |f| %>
  <%= f.select :access_level_id, options_for_select(partner.event.access_levels.map { |al| [ "#{al.name_with_price} (#{partner.received_invitations.where(access_level: al).count} sent)", al.id ] }, select || ""), prompt: "Select Ticket" %>
  <%= f.submit "Send Invite" %>
<% end %>
