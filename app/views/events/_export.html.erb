<% if @event.export.present? %>
  <%= link_to raw('<i class="glyphicon glyphicon-download"></i> Download as xls'), @event.export.url, class: 'btn btn-xs btn-primary' %> (Generated on <%= nice_time @event.export_updated_at %>)
<% else %>
  No excel yet generated.
<% end %>
<%= link_to raw('<i class="glyphicon glyphicon-refresh"></i> Refresh'), generate_export_event_path(@event), class: 'btn btn-xs btn-default', method: :post, remote: true, id: "refresh-export" %>
