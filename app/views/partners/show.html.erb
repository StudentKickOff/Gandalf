<h1>Welcome, <%= @partner.name %></h1>

<p>You are registered as a partner of <%= link_to @event %> with the email-adres "<%= @partner.email %>". Please contact them if you want to change this email address.</p>

<% if @partner.received_invitations.any? %>
  <h2>Pending Invitations</h2>

  <p>You have pending invitations. Confirm them below to receive your ticket information.</p>

  <%= form_for [@event, @partner], url: confirm_event_partner_path(@event, @partner), method: :post, remote: true do |f| %>
    <%= f.select :id, @partner.received_invitations.map { |i| [i.access_level.name, i.id] } %>
    <%= f.submit "Confirm" %>
  <% end %>
<% end %>




<% if false # TODO for advanced tickets %>
<div class="row">
  <div class="col-sm-6">
    <h2>Sent Invitations</h2>
    <div class="table-responsive">
      <table class="table" id="invitations">
        <tbody>
          <%= render @partner.sent_invitations %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="col-sm-6">
    <h2>Reservations Left</h2>
    <div class="table-responsive">
      <table class="table" id="reservations">
        <tbody>
          <%= render @partner.reservations %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<% end %>
